{
  "name": "vue-use-hotkey",
  "version": "0.1.0",
  "description": "Hotkey Hooks for Vue 2/3",
  "author": "XiNiHa <anesin1109@naver.com>",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npx rimraf dist && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc --module es2015 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:types": "tsc -d --emitDeclarationOnly --declarationDir dist/types",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XiNiHa/vue-use-hotkey"
  },
  "dependencies": {
    "vue-demi": "^0.6.0"
  },
  "devDependencies": {
    "@testing-library/vue": "^5.6.1",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "4",
    "@typescript-eslint/parser": "^4.14.1",
    "@vue/composition-api": "^1.0.0-rc.1",
    "eslint": "^7.18.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.10"
  },
  "files": [
    "dist"
  ]
}
